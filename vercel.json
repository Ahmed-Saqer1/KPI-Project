{
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11",
      "includeFiles": [
        "backend/app/**",
        "backend/requirements.txt",
        "config/kpi_config.yaml"
      ]
    }
  },
  "installCommand": "npm ci --prefix frontend",
  "buildCommand": "npm run build --prefix frontend",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/((?!api)(?!.*\\..*).*)", "destination": "/index.html" }
  ]
}
